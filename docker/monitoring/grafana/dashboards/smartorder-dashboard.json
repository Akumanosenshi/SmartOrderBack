    {
      "type": "stat",
      "title": "Avg People/Reservation",
      "id": 5,
      "targets": [
        {
          "expr": "smartorder_avg_people_per_reservation",
          "refId": "E"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "type": "graph",
      "title": "CPU Usage %",
      "id": 10,
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "refId": "J"
        }
      ]
    },
    {
      "type": "graph",
      "title": "RAM Usage %",
      "id": 11,
      "targets": [
        {
          "expr": "100 - ((node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100)",
          "refId": "K"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Process CPU Usage",
      "id": 12,
      "targets": [
        {
          "expr": "process_cpu_usage",
          "refId": "L"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top IP Clients (SmartOrder)",
      "id": 20,
      "targets": [
        {
          "expr": "topk(10, smartorder_requests_by_ip_total)",
          "refId": "T"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "value"
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto"
          }
        },
        "overrides": []
      }
    },
    {
